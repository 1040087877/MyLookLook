<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/top_item_layout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/item_margin"
              android:foreground="?selectableItemBackground"
              android:paddingTop="@dimen/item_margin"
    >
    <looklook.lyb.com.mylooklook.widget.BadgedFourThreeImageView
        android:id="@+id/item_image_id"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_hight"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/image_left_margin"
        android:layout_marginTop="5dp"
        android:padding="@dimen/item_padding"
        android:elevation="@dimen/z_card"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/item_text_source_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="helooeddd"
            android:textColor="@color/text_source"
            android:textSize="10sp"/>
    </LinearLayout>
</LinearLayout>