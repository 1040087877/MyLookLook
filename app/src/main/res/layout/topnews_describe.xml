<?xml version="1.0" encoding="utf-8"?>
<looklook.lyb.com.mylooklook.widget.ElasticDragDismissFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draggable_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_light"
    app:dragDismissDistance="@dimen/drag_dismiss_distance"
    app:dragDismissScale="0.95"

    tools:context="looklook.lyb.com.mylooklook.activity.TopNewsDescribeActivity">
    <FrameLayout
        android:id="@+id/container"
        android:background="@color/background_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            >

            <looklook.lyb.com.mylooklook.widget.ParallaxScrimageView
                android:id="@+id/shot"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:minHeight="168dp"
                android:transitionName="@string/transition_topnew"

                />
            <looklook.lyb.com.mylooklook.widget.TranslateYTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@color/text_primary_light"
                android:layout_gravity="bottom|start"
                android:layout_margin="20dp"
                />
        </FrameLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="#3b000000"
            android:elevation="1dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:title="网易头条"
            android:outlineProvider="none"
            android:fitsSystemWindows="true"
            >

        </android.support.v7.widget.Toolbar>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nest"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="250dp"
                android:orientation="vertical"
                >
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/htNewsContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/nev_item"
                    android:padding="12dp"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/background_light"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>
</looklook.lyb.com.mylooklook.widget.ElasticDragDismissFrameLayout>
